<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
                        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="briareos_chat_cache" pattern="/cache">
        <default key="_controller">briareos_chat.controller:cacheAction</default>
        <requirement key="_method">POST</requirement>
    </route>
    <route id="briareos_chat_activate" pattern="/activate">
        <default key="_controller">briareos_chat.controller:activateAction</default>
        <requirement key="_method">POST</requirement>
    </route>
    <route id="briareos_chat_close" pattern="/close">
        <default key="_controller">briareos_chat.controller:closeAction</default>
        <requirement key="_method">POST</requirement>
    </route>
    <route id="briareos_chat_ping" pattern="/ping">
        <default key="_controller">briareos_chat.controller:pingAction</default>
        <requirement key="_method">POST</requirement>
    </route>
    <route id="briareos_chat_send" pattern="/send">
        <default key="_controller">briareos_chat.controller:sendAction</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>