{% import 'BriareosChatBundle:Chat:chat_template.html.twig' as chat %}

<link href="{{ asset('bundles/briareoschat/css/chat.css') }}" type="text/css" rel="stylesheet"/>
<script type="text/javascript" src="{{ asset('bundles/briareoschat/js/chat.js') }}"></script>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        Chat.initialize({
            tpl:{
                status:'{{ chat.status() }}',
                user:'{{ chat.user() }}',
                window:'{{ chat.window() }}',
                message:'{{ chat.message() }}',
                messages:'{{ chat.messages() }}',
                chat:'{{ chat.chat() }}'
            },
            enabled:true,
            cacheUrl:'{{ path('briareos_chat_cache') }}',
            activateUrl:'{{ path('briareos_chat_activate') }}',
            closeUrl:'{{ path('briareos_chat_close') }}',
            sendUrl:'{{ path('briareos_chat_send') }}',
            pingUrl:'{{ path('briareos_chat_ping') }}'
        });
    });
</script>
